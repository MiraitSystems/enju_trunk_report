<div id="table">
<%= form_for(@report_template) do |f| %>
  <%= f.error_messages %>

  <div class="row">
    <div><%= f.label :name %></div>
    <div><%= f.text_field :name %><%#= f.text_field :name, :disabled => true %></div>
  </div>
  <div class="row">
    <div><%= f.label :display_name %></div>
    <div><%= f.text_field :display_name %></div>
  </div>
  <div class="row">
    <div><%= f.label :filename %></div>
    <div><%= f.text_field :filename %></div>
  </div>
  <div class="row">
    <div><%= f.label :size %></div>
    <div><%= f.text_field :size %></div>
  </div>
  <div class="row">
    <div><%= f.label :header %></div>
    <div><%= f.text_field :header %></div>
  </div>
  <div class="row">
    <div><%= f.label :footer %></div>
    <div><%= f.text_field :footer %></div>
  </div>
  <div class="row">
    <div><%= f.label :title %></div>
    <div><%= f.text_field :title %></div>
  </div>
  <div class="row">
    <div><%= f.label :message %></div>
    <div><%= f.text_area :message %></div>
  </div>
  <div class="row">
    <div><%= f.label :body %></div>
    <div><%= f.text_area :body %></div>
  </div>
  <div class="actions">
    <div><%= f.submit %></div>
  </div>
<% end %>
</div>
